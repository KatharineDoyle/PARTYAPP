<p id="notice"><%= notice %></p>

<div class="l-flex-fix">
  <div class="l-flex-parent">
      <div class="space-info">
        <div class="example-item">
        <%= cl_image_tag @space.photo, height: 300, width: 800, crop: :fill %>
        <h2 class="text-center"><%= @space.name %></h2>
        <p><%= @space.description %></p>
        <p><%= @space.address %></p>
         <h3>Reviews</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <h3>Add a review:</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">

        <%= simple_form_for [@space, @review] do |f| %>
        <%= f.input :content%>
        <%= f.submit %>
        <% end %>

              </div>
            </div>
            <div class="row">
              <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">

                <ul>
                  <% @space.reviews.each do |review| %>
                  <li>

                    <p><%= review.content %></p>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <% if policy(@space).edit? %>
        <% end %>
        <p> <%= link_to "Book your party", '#', class: 'btn-blue' %></p>
        <% if policy(@space).edit? %>
        <% end %>
        <%= link_to 'Back', spaces_path %>
      </div>
    </div>

   <div class="map-cal l-grid-half">
        <div
        id="map"
        style="width: 50vw;
        height: 600px;"
        data-markers="<%= @markers.to_json %>"
        data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
      </div>
      <div class="example-item">
    </div>
  </div>
</div>
</div>


