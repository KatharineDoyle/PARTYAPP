<div class="flex-container">
  <div class="card-container">
   <div class="row">
    <div class ="col-xs-12 col-sm-6 col-md-4 col-lg-3 flex-item">
      <h2 class="text-center"><%= @space.name %></h2>
      <%= cl_image_tag @space.photo, height: 300, width: 400, crop: :fill %>
      <p><%= @space.description %></p>
      <p><%= @space.address %></p>
      <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <h3>Reviews</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">
        <h3>Add a review:</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">

        <%= simple_form_for [@space, @review] do |f| %>
          <%= f.input :content%>
          <%= f.submit class: 'btn btn-primary'%>
        <% end %>

      </div>
    </div>
    <div class="row">
      <div class="col-xs-12 col-sm-offset-1 col-sm-10 col-md-offset-3 col-md-6">

        <ul>
        <% @space.reviews.each do |review| %>
          <li>

            <p><%= review.content %></p>
            <p> Rating </p>
            <p><%= review.rating %></p>

          </li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>

