<p id="notice"><%= notice %></p>

<h1>Spaces</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @spaces.each do |restaurant| %>
      <tr>
        <td><%= space.name %></td>
        <td><%= space.user.email %></td>
        <td><%= link_to 'Show', space %></td>
        <% if policy(space).edit? %>
          <td><%= link_to 'Edit', edit_space_path(restaurant) %></td>
        <% end %>
        <% if policy(space).destroy? %>
          <td><%= link_to 'Destroy', space, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Space', new_space_path %>
